<section class="seasonal-forest" id="seasonal-forest">
    <div class="container">
        <div class="row">
          {% comment %} Title header {% endcomment %}
          <div class="column--header">
            <div class="section-header">
                <h1>{{section.settings.header}}</h1>
                <h2>{{section.settings.header_description}}</h2>
              </div>
          </div>

          {% comment %} first block column {% endcomment %}
          <div class="column--cake">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'column_section' -%} 

                    <div class="section-column">
                      <div class="col-md-4">
                        {%- assign cake-image = block.settings.cake-image -%}
                        <img src="{{ cake-image | image_url: width: cake-image.width }}" alt="">
                        <h3>{{ block.settings.cake-name }}</h3>
                        <h4>{{ block.settings.cake-avail }} </h4>
                        <h5>{{ block.settings.cake-price }}</h5>
                      </div>
                    </div>

                {%- endcase -%}
              {%- endfor -%} 
          </div>

          {% comment %} second blocks column {% endcomment %}
          <div class="column--icon">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'column_section_2' -%} 

                    <div class="section-column">
                      <div class="col-md-4">
                        {%- assign icon = block.settings.icon -%}
                        <img src="{{ icon | image_url: width: icon.width }}" alt="">
                        <h3 class="title">{{ block.settings.title }}</h3>
                        <p>{{ block.settings.title_description }}</p>
                      </div>
                    </div>

                {%- endcase -%}
              {%- endfor -%} 
          </div>
          
          {% comment %} button {% endcomment %}
          <div class="column--button">
            <div class="section-button">
              <a href="#" class="btn" role="button">SHOP CAKES</a>
            </div>
          </div>
            
        </div>
    </div>
</section>


  
{% schema %}
    {
    "name": "seasonal forest section",
    "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header"
    },
    {
      "type": "text",
      "id": "header_description",
      "label": "Header Description"
    }
  ],
    "blocks": [
      {
        "name": "Column Section",
        "type": "column_section",
        "settings": [
          {
            "type": "image_picker",
            "id": "cake-image",
            "label": "cake-image"
          },
          {
            "type": "text",
            "id": "cake-name",
            "label": "cake-name",
            "default": "name"
          },
          {
            "type": "text",
            "id": "cake-avail",
            "label": "cake-avail",
            "default": "availability"
          },
          {
            "type": "text",
            "id": "cake-price",
            "label": "cake-price",
            "default": "price"
          }
        ]
      },
      {
      "name": "Column Section 2",
      "type": "column_section_2",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title",
          "default": "title"
        },
        {
          "type": "textarea",
          "id": "title_description",
          "label": "title description",
          "default": "insert description here"
        }
      ]
    }
    ],
    "presets": [
      {
        "name": "seasonal forest section"
      }
    ]
  }  
{% endschema %}
  

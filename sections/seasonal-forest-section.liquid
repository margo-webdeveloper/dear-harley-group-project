/* Seasonal Forest Section Style */
.seasonal-forest .container {
    max-width: 1220px;
    margin: auto;
    margin-bottom: 120px;
}

.seasonal-forest .column--header h1 {
    color: #96B1FB;
    font-size: 50px;
    font-family: 'Lobster';
    margin-top: 100px;
}

.seasonal-forest .column--header h2 {
    color: #575A61;
    font-size: 36px;
    font-family: 'Fredericka the Great';
}

.seasonal-forest .column--cake {
    display: flex;
    gap: 10px;
    text-align: center;
    margin-top: 40px;
}

.seasonal-forest .column--cake h3 {
    color: #575A61;
    font-size: 21px;
    /* line-height: 25px; */
    font-family: 'Montserrat';
    font-weight: 500;
    margin: 15px 0px 0px 0px;
}

.seasonal-forest .column--cake h4 {
    color: #575A61;
    font-size: 17px;
    /* line-height: 20px; */
    font-family: 'Montserrat';
    font-weight: 400;
    margin: 10px 0px 20px 0px;
}

.seasonal-forest .column--cake h5 {
    color: #5EBFFE;
    font-size: 20px;
    /* line-height: 24px; */
    font-family: 'Montserrat';
    font-weight: 500;
    margin: 0;
}

.seasonal-forest .column--cake img {
    width: 100%;
}

.seasonal-forest .column--icon {
    display: flex;
    gap: 48px;
    text-align: center;
    margin-top: 120px;
    margin-bottom: 40px;
    justify-content: space-around;
}

.seasonal-forest .column--icon h3 {
    color: #5EBFFE;
    font-size: 24px;
    line-height: 29px;
    font-family: 'Montserrat';
    font-weight: 500;
}

.seasonal-forest .column--icon p {
    color: #575A61;
    font-size: 20px;
    text-align: left;
    line-height: 24px;
    font-family: 'Montserrat';
    font-weight: 500;
}

.seasonal-forest .column--icon img {
    width: 53.6px;
    height: 70px;
}

.seasonal-forest .column--button {
    background-color: #5EBFFE;
    width: 200px;
    height: 50px;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.seasonal-forest .column--button a {
    text-decoration: none;
    color: #FFFFFF;
    font-size: 21px;
    line-height: 25px;
    font-family: 'Montserrat';
    font-weight: 700;
}

/* mobile */
@media (max-width:600px) {
.seasonal-forest .container {
    padding-top: 30px;
    margin-bottom: 0;
    padding-bottom: 30px;
}

.seasonal-forest .column--header h1 {
    font-size: 40px;
    margin-top: 0;
}

.seasonal-forest .column--header h2 {
    font-size: 20px;
}

/* cake blocks */
.seasonal-forest .column--cake {
    flex-flow: column;
    width: 80%;
    margin-top: 60px;
    margin-bottom: 60px; 
    margin: 0px auto 50px auto; 
}

.seasonal-forest .column--cake h3 {
    margin: 10px;
}

.seasonal-forest .column--cake h5 {
    margin: 10px 0px 30px 0px;
}

/* icon blocks */
.seasonal-forest .column--icon {
    flex-flow: column;
    width: 80%;
    margin: auto; 
}
/* button */
.seasonal-forest .column--button {
  margin-top: 60px;
}
}
